{{yield}}
{{#if this.error}}
    {{polaris-banner text=this.error status="critical" icon="CircleAlertMajor"}}
{{/if}}
{{polaris-text-field
  label="Username/Email"
  placeholder="Username/Email"
  value=""
  onChange=(action "username_change")
}}

{{polaris-text-field
  label="Password"
  placeholder="Password Here"
  value=""
  type="password"
  onChange=(action "password_change")
}}
{{#if this.captcha_needed}}
    {{g-recaptcha-v2 siteKey='6Le0TzsbAAAAAO8s3f1kH9bu-aU1pedZYM8GK4ah' verified=(action 'setcaptcha')}}
{{/if}}
{{#polaris-button onClick=(action "login") loading=login_loading}}
  Login
{{/polaris-button}}
