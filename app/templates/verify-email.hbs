{{page-title "Email Verification"}}
{{#if @model.error}}
    <BsAlert
        @visible={{true}}
        @fade={{true}}
        @type="danger"
        @dismissible={{false}}
    >
        {{@model.error}}
    </BsAlert>
{{else}}
    <BsAlert
        @visible={{true}}
        @fade={{true}}
        @type="success"
        @dismissible={{false}}
    >
        Successfully verified your email!
    </BsAlert>
{{/if}}